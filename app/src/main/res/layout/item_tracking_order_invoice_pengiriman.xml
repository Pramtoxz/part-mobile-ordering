<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_9"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_6"
        app:cardCornerRadius="@dimen/margin_15"
        app:cardElevation="@dimen/margin_3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/bg_cart_number"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_13"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_16"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_semibold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_13"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvInvoiceNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="INVC5005968849"
                        android:textColor="@color/txt_black_category"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_semibold" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_3"
                        android:text="28 November 2019"
                        android:textColor="@color/txt_gray_category"
                        android:textSize="@dimen/font_12"
                        app:fontFamily="@font/opensans_regular" />


                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_6"
                        android:layout_marginRight="@dimen/margin_20"
                        android:text="Rp 10.230.000"
                        android:textColor="@color/red_nominal"
                        android:textSize="@dimen/font_16"
                        app:fontFamily="@font/opensans_bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_8"
                            android:layout_weight="1"
                            android:text="@string/lbl_shipping_quantity"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/font_10"
                            app:fontFamily="@font/opensans_regular" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/lbl_no_surat_jalan"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/font_10"
                            app:fontFamily="@font/opensans_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_3"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvShippingQty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_8"
                            android:layout_weight="1"
                            android:text="1 pcs"
                            android:textColor="@color/txt_gray_category"
                            android:textSize="@dimen/font_14"
                            app:fontFamily="@font/opensans_bold" />


                        <TextView
                            android:id="@+id/tvNoSurat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CGK4059900"
                            android:textColor="@color/txt_gray_category"
                            android:textSize="@dimen/font_14"
                            app:fontFamily="@font/opensans_semibold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_8"
                            android:layout_weight="1"
                            android:text="@string/lbl_tanggal_surat_jalan"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/font_10"
                            app:fontFamily="@font/opensans_regular" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/lbl_ekspedisi"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/font_10"
                            app:fontFamily="@font/opensans_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="@dimen/margin_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_3"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDateSurat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_8"
                            android:layout_weight="1"
                            android:text="29 Nov 2019"
                            android:textColor="@color/txt_gray_category"
                            android:textSize="@dimen/font_14"
                            app:fontFamily="@font/opensans_semibold" />


                        <TextView
                            android:id="@+id/tvEkspedisi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CGK4059900"
                            android:textColor="@color/txt_gray_category"
                            android:textSize="@dimen/font_14"
                            app:fontFamily="@font/opensans_semibold" />

                    </LinearLayout>


                </LinearLayout>




            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>