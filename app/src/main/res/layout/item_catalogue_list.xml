<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.loopeer.shadow.ShadowView
        android:id="@+id/btnCatalogue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_16"
        app:cornerRadius="@dimen/margin_25"
        app:shadowMargin="@dimen/margin_4"
        app:shadowRadius="@dimen/margin_20">

        <LinearLayout
            android:layout_marginRight="@dimen/margin_20"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_20"
                app:cardBackgroundColor="@color/txt_black"
                app:cardCornerRadius="@dimen/margin_14"
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_40">

                <ImageView
                    android:id="@+id/ivCatalogue"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_book_knowledge"
                    android:layout_width="@dimen/margin_20"
                    android:layout_height="@dimen/margin_20"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvNameCatalogue"
                app:fontFamily="@font/opensans_semibold"
                android:layout_marginLeft="@dimen/margin_16"
                android:textSize="@dimen/font_14"
                android:text="Buku Pedoman Pemilik"
                android:layout_marginRight="@dimen/margin_10"
                android:textColor="@color/txt_black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <ImageView
                app:tint="@color/gray80"
                android:src="@drawable/ic_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </com.loopeer.shadow.ShadowView>

