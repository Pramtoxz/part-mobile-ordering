<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/vBottom"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_width="0dp"
    android:layout_height="0dp"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rHeader"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_fill_bottom_fragment"
                        android:orientation="vertical" />

                </LinearLayout>


                <com.loopeer.shadow.ShadowView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?selectableItemBackground"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_6"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_6"
                    app:cornerRadius="@dimen/margin_20"
                    app:shadowMargin="@dimen/margin_4"
                    app:shadowRadius="@dimen/margin_15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_marginBottom="@dimen/margin_20"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginEnd="@dimen/margin_20"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvSalesName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Empty"
                            android:textColor="@color/txt_black_category"
                            android:textSize="@dimen/font_14"
                            app:fontFamily="@font/opensans_bold" />

                        <TextView
                            android:id="@+id/tvSalesKode"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_4"
                            android:layout_height="wrap_content"
                            android:text="12312 â€¢ Brahmana Motor"
                            android:textColor="@color/txt_black_category"
                            android:textSize="@dimen/font_14"
                            app:fontFamily="@font/opensans_semibold" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_4"
                            android:layout_height="wrap_content"
                            android:text="Srondol Wetan, Kec. Banyumanik, Kota Semarang, Jawa Tengah 50263"
                            android:textColor="@color/txt_gray_ongoing"
                            android:textSize="@dimen/font_12"
                            app:fontFamily="@font/opensans_regular" />

                        <TextView
                            android:id="@+id/tvReport"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_6"
                            android:layout_height="wrap_content"
                            android:text="4 Report Visit"
                            android:textColor="@color/txt_black_category"
                            android:textSize="@dimen/font_14"
                            app:fontFamily="@font/opensans_semibold" />

                    </LinearLayout>

                </com.loopeer.shadow.ShadowView>



            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_visit_details"
                    android:textAllCaps="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/font_12"
                    app:fontFamily="@font/opensans_bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvVisitDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tool:listitem="@layout/item_visit_details"
                    android:layout_marginBottom="@dimen/margin_20"
                    tool:itemCount="1"
                    />


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>


    <LinearLayout
        android:id="@+id/vBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@drawable/bg_fill_camera"
            android:text="@string/btn_sebelumnya"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_14"
            app:fontFamily="@font/opensans_semibold" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_25"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@drawable/bg_fill_gallery"
            android:text="@string/btn_selanjutnya"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14"
            app:fontFamily="@font/opensans_semibold" />


    </LinearLayout>

    <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPrev"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large"
        android:src="@drawable/ic_arrow_right"
        app:borderWidth="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/margin_large"
        android:src="@drawable/ic_arrow_left"
        app:borderWidth="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>