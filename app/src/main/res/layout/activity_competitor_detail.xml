<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:Skeleton="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rHeader"
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_fill_bottom_fragment"
                        android:orientation="vertical" />

                </LinearLayout>


                  <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                                         android:layout_marginRight="@dimen/margin_20"
                                                         android:layout_marginLeft="@dimen/margin_20"
                                                         app:cardCornerRadius="@dimen/margin_12"
                                                         app:cardElevation="@dimen/margin_2"
                                                         android:layout_marginTop="@dimen/margin_15"
                                                         android:layout_marginBottom="@dimen/margin_5"
                                                         android:layout_height="wrap_content">


                      <androidx.constraintlayout.widget.ConstraintLayout
                              xmlns:android="http://schemas.android.com/apk/res/android"
                              xmlns:app="http://schemas.android.com/apk/res-auto"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent">

                          <LinearLayout
                                  android:layout_width="0dp"
                                  android:layout_height="0dp"
                                  android:layout_marginEnd="0dp"
                                  android:layout_marginStart="0dp"
                                  android:layout_marginTop="0dp"
                                  android:orientation="vertical"
                                  app:layout_constraintDimensionRatio="H,16:8"
                                  app:layout_constraintEnd_toEndOf="parent"
                                  app:layout_constraintStart_toStartOf="parent"
                                  app:layout_constraintTop_toTopOf="parent">

                              <io.rmiri.skeleton.SkeletonGroup
                                      android:id="@+id/skGroup"
                                      android:layout_width="match_parent"
                                      android:layout_height="match_parent"
                                      Skeleton:SK_BackgroundViewsColor="#E1E1E1"
                                      Skeleton:SK_animationAutoStart="true"
                                      Skeleton:SK_animationDirection="LTR"
                                      Skeleton:SK_animationDuration="1000"
                                      Skeleton:SK_animationFinishType="gradient"
                                      Skeleton:SK_animationNormalType="gradient"
                                      Skeleton:SK_backgroundMainColor="@android:color/transparent"
                                      Skeleton:SK_highLightColor="#faefef">

                                  <io.rmiri.skeleton.SkeletonView
                                          android:layout_width="match_parent"
                                          android:layout_height="match_parent"
                                          Skeleton:SK_padding="0dp"
                                          Skeleton:SK_shapeType="rect">

                                      <ImageView
                                              android:id="@+id/ivCompetitor"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:scaleType="centerCrop"/>


                                  </io.rmiri.skeleton.SkeletonView>


                              </io.rmiri.skeleton.SkeletonGroup>


                          </LinearLayout>

                      </androidx.constraintlayout.widget.ConstraintLayout>


                      </androidx.cardview.widget.CardView>



            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tvCodeDealer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dealer No #12345"
                    android:textColor="@color/txt_black_category"
                    android:textSize="@dimen/font_14"
                    app:fontFamily="@font/opensans_semibold" />


                <TextView
                    android:id="@+id/tvNameDealer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:text="Michelin"
                    android:textColor="@color/txt_gray_category"
                    android:textSize="@dimen/font_12"
                    app:fontFamily="@font/opensans_regular" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/grey_divider_1"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_height="@dimen/divider_1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_campaign_details"
                        android:textColor="@color/txt_black_category"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_semibold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_20"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginRight="@dimen/margin_10"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/lbl_judul_aktivitas_kompetitor"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/font_14"
                            app:fontFamily="@font/opensans_regular" />

                        <TextView
                            android:id="@+id/tvActivitasCompetitor"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Michelin Ban \nPromo "
                            android:textColor="@color/txt_black_category"
                            android:textSize="@dimen/font_14"
                            app:fontFamily="@font/opensans_semibold" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_20"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginRight="@dimen/margin_10"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/lbl_produk"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/font_14"
                            app:fontFamily="@font/opensans_regular" />

                        <TextView
                            android:id="@+id/tvProduk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_favorite_type"
                            android:paddingTop="@dimen/margin_1"
                            android:paddingLeft="@dimen/margin_11"
                            android:paddingRight="@dimen/margin_11"
                            android:paddingBottom="@dimen/margin_3"
                            android:text="TIRE"
                            android:textColor="@color/txt_gray_category"
                            android:textSize="@dimen/font_10"
                            app:fontFamily="@font/opensans_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_22"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginRight="@dimen/margin_10"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/lbl_begin_effdate"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/font_14"
                            app:fontFamily="@font/opensans_regular" />

                        <TextView
                            android:id="@+id/tvBeginDate"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Juni 30, 2019"
                            android:textColor="@color/txt_black_category"
                            android:textSize="@dimen/font_14"
                            app:fontFamily="@font/opensans_semibold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_22"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginRight="@dimen/margin_10"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/lbl_last_effdate"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/font_14"
                            app:fontFamily="@font/opensans_regular" />

                        <TextView
                            android:id="@+id/tvLastDate"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Juli 31, 2019"
                            android:textColor="@color/txt_black_category"
                            android:textSize="@dimen/font_14"
                            app:fontFamily="@font/opensans_semibold" />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/grey_divider_1"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_height="@dimen/divider_1"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_keterangan_promo"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/font_12"
                        app:fontFamily="@font/opensans_semibold" />


                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        android:layout_marginBottom="@dimen/margin_20"
                        android:text="Selama Stock Masih ada, hanya untuk type Vario saja, Diskon 15% setiap pembelian 100 pcs Ban"
                        android:textColor="@color/txt_black_category"
                        android:textSize="@dimen/font_12"
                        app:fontFamily="@font/opensans_regular" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>