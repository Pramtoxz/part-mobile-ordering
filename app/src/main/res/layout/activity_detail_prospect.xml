<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.widget.activity.prospect.detail.DetailProspectActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_honda" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:local="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar_detail_prospect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_marginTop="25dp"
            app:elevation="0dp"
            local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            local:theme="@style/ThemeOverlay.AppCompat.Light"
            local:titleTextColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_20"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardElevation="2dp"
                                app:cardCornerRadius="@dimen/margin_medium">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_margin="@dimen/margin_medium">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_margin="@dimen/margin_extra_small">

                                        <com.makeramen.roundedimageview.RoundedImageView
                                            android:id="@+id/ivIconProspect"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:src="@drawable/profile_dummy"
                                            android:layout_marginTop="@dimen/margin_extra_small"
                                            android:layout_marginEnd="@dimen/margin_extra_small"
                                            app:riv_corner_radius="@dimen/form_login_radius_100"
                                            />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="vertical"
                                                android:layout_marginStart="@dimen/margin_medium">

                                                <TextView
                                                    android:id="@+id/tvCustomerName"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_horizontal"
                                                    android:text="Bambang Oke"
                                                    android:textColor="@color/txt_black"
                                                    android:textSize="@dimen/txt_default"
                                                    app:fontFamily="@font/opensans_semibold" />

                                                <TextView
                                                    android:id="@+id/tvCustomerPhone"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_horizontal"
                                                    android:layout_marginTop="@dimen/margin_5"
                                                    android:text="080829192121"
                                                    android:textColor="@color/txt_black"
                                                    android:textSize="@dimen/txt_small"
                                                    app:fontFamily="@font/opensans_regular" />

                                                <TextView
                                                    android:id="@+id/tvCustomerEmail"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_horizontal"
                                                    android:layout_marginTop="@dimen/margin_5"
                                                    android:text="Bambang@gmail.com"
                                                    android:textColor="@color/txt_gray"
                                                    android:textSize="@dimen/txt_small"
                                                    app:fontFamily="@font/opensans_regular" />


                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical">

                                                <Button
                                                    android:id="@+id/btnContact"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="30dp"
                                                    android:background="@drawable/bg_btn_green_round_prospect"
                                                    android:text="@string/action_contact"
                                                    android:textAllCaps="false"
                                                    android:textColor="@color/txt_white"
                                                    android:fontFamily="@font/opensans_semibold"
                                                    android:textSize="@dimen/txt_small"
                                                    android:layout_gravity="center_vertical"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/margin_30"
                                android:layout_marginBottom="@dimen/margin_extra_small"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tahap"
                                    android:textColor="@color/txt_white"
                                    android:textSize="@dimen/txt_small"
                                    android:layout_marginStart="@dimen/margin_mid"
                                    android:fontFamily="@font/opensans_semibold"/>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recycler_step"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/margin_medium"
                                    android:layout_marginStart="@dimen/margin_small"
                                    />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/margin_medium">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Daftar Follow Up"
                                        android:textAllCaps="true"
                                        android:fontFamily="@font/opensans_bold"
                                        android:textColor="@color/txt_white"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/txt_small"
                                        android:lineSpacingExtra="1dp"
                                        android:layout_marginStart="@dimen/margin_10"
                                        android:layout_weight="1"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Lihat Semua"
                                        android:textAllCaps="true"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:fontFamily="@font/opensans"
                                        android:textColor="@color/txt_white"
                                        android:textSize="@dimen/txt_small"
                                        android:layout_marginEnd="@dimen/margin_10"
                                        android:lineSpacingExtra="1dp"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:background="@drawable/bg_white_round_20"
                                    android:layout_marginTop="@dimen/margin_10"
                                   >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="@dimen/margin_20"
                                        android:layout_marginLeft="@dimen/margin_20"
                                        android:layout_marginRight="@dimen/margin_20"
                                        android:paddingLeft="@dimen/margin_10"
                                        android:paddingRight="@dimen/margin_10"
                                        android:background="@drawable/bg_grey_round_20">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Add Follow Up"
                                            android:textSize="@dimen/txt_default"
                                            android:textColor="@color/txt_black"
                                            android:fontFamily="@font/opensans_regular"
                                            android:textAllCaps="false"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginTop="@dimen/margin_10"
                                            android:layout_marginBottom="@dimen/margin_10"
                                            android:layout_marginStart="@dimen/margin_10"
                                            android:layout_weight="1"/>

                                        <ImageButton
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_add_item"
                                            android:background="@android:color/transparent"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginEnd="@dimen/margin_10"
                                            android:layout_weight="0"/>
                                    </LinearLayout>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/recycler_follw_up"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_10"
                                        android:layout_marginBottom="@dimen/margin_20"
                                        android:layout_marginLeft="@dimen/margin_30"
                                        android:layout_marginRight="@dimen/margin_30"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/llDataPelanggan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginTop="@dimen/margin_21_5"
                                    android:layout_gravity="center_horizontal">

                                    <ImageButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_scroll_down"
                                        android:background="@android:color/transparent"
                                        android:layout_gravity="center_horizontal"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Lihat detail pelanggan"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/opensans_regular"
                                        android:textSize="@dimen/txt_small"
                                        android:layout_marginTop="@dimen/margin_10_5"
                                        />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>