<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_6"
        app:cardCornerRadius="@dimen/margin_20"
        app:cardElevation="@dimen/margin_3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/bg_cart_number"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_13"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_16"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_semibold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPartNumber"
                        android:layout_width="match_parent"
                        android:layout_marginRight="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:text="06381KW6P01"
                        android:textColor="@color/txt_black_category"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_semibold" />

                    <TextView
                        android:id="@+id/tvPartDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2"
                        android:text="CON ROD â€¢ KIT"
                        android:textColor="@color/txt_gray_category"
                        android:textSize="@dimen/font_12"
                        app:fontFamily="@font/opensans" />

                    <TextView
                        android:id="@+id/tvItemGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_6"
                        android:layout_marginRight="@dimen/margin_20"
                        android:background="@drawable/bg_favorite_type"
                        android:paddingLeft="@dimen/margin_9"
                        android:paddingTop="@dimen/margin_1"
                        android:paddingRight="@dimen/margin_9"
                        android:paddingBottom="@dimen/margin_3"
                        android:text="TIRE"
                        android:textColor="@color/txt_gray_category"
                        android:textSize="@dimen/font_10"
                        app:fontFamily="@font/opensans_regular" />

                    <TextView
                        android:id="@+id/tvHet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_7"
                        android:layout_marginRight="@dimen/margin_20"
                        android:text="Rp. 55.000"
                        android:textColor="@color/red_nominal"
                        android:textSize="@dimen/font_12"
                        app:fontFamily="@font/opensans_bold" />

                    <TextView
                        android:id="@+id/tvAvailabePcs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_3"
                        android:layout_marginRight="@dimen/margin_20"
                        android:text="Available 460 pcs"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/font_10"
                        app:fontFamily="@font/opensans_semibold" />



                    <LinearLayout
                        android:layout_marginBottom="@dimen/margin_20"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10"
                                android:layout_marginRight="@dimen/margin_20"
                                android:text="@string/lbl_total_amount"
                                android:textColor="@color/txt_gray"
                                android:textSize="@dimen/font_10"
                                app:fontFamily="@font/opensans_regular" />

                            <TextView
                                android:id="@+id/tvTotalAmount"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/margin_4"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_20"
                                android:text="Rp. 55.000"
                                android:textColor="@color/red_nominal"
                                android:textSize="@dimen/font_14"
                                app:fontFamily="@font/opensans_bold" />



                        </LinearLayout>



                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnDelete"
                            android:layout_marginTop="@dimen/margin_3"
                            android:layout_marginRight="@dimen/margin_8"
                            android:foreground="?selectableItemBackgroundBorderless"
                            android:layout_marginBottom="@dimen/margin_3"
                            app:cardCornerRadius="@dimen/margin_14"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_30">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:layout_marginRight="@dimen/margin_10"
                                    android:drawablePadding="@dimen/margin_12"
                                    android:src="@drawable/ic_file_delete"
                                    app:tint="@color/black50"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnEdit"
                            android:layout_marginTop="@dimen/margin_3"
                            android:layout_marginRight="@dimen/margin_2"
                            android:foreground="?selectableItemBackgroundBorderless"
                            android:layout_marginBottom="@dimen/margin_3"
                            app:cardCornerRadius="@dimen/margin_14"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_30">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_marginLeft="@dimen/margin_20"
                                    android:layout_marginRight="@dimen/margin_20"
                                    android:id="@+id/tvCountCart"
                                    android:drawablePadding="@dimen/margin_12"
                                    app:fontFamily="@font/opensans_semibold"
                                    android:textSize="@dimen/font_12"
                                    android:drawableRight="@drawable/ic_edit"
                                    android:textColor="@color/txt_black_category"
                                    android:layout_width="wrap_content"
                                    android:text="1"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>



        </LinearLayout>

            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/ivInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_20"
                android:src="@drawable/ic_info_badge" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>