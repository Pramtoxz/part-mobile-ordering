<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        app:cardCornerRadius="@dimen/radius_card_medium"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_mid">

                <ImageView
                    android:id="@+id/ivUnitThumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:maxWidth="90dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/es_no_data" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_mid"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUnitName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:text="Beat ESP"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/txt_default"
                        app:fontFamily="@font/opensans_semibold" />

                    <TextView
                        android:id="@+id/tvUnitCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:text="CX3 - NC11D3C2 A/T"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/txt_small"
                        app:fontFamily="@font/opensans_regular" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvUnitPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/margin_small"
                            android:layout_weight="1"
                            android:text="Rp 25.000.000"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/txt_small"
                            app:fontFamily="@font/opensans_semibold" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llAvailableStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:background="@drawable/bg_fill_round_gray_available"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:text="@string/stock_lbl_stok"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/txt_smallest"
                        app:fontFamily="@font/opensans_regular" />


                    <TextView
                        android:id="@+id/tvStock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:text="6"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/txt_small"
                        app:fontFamily="@font/opensans_semibold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:text="@string/product_lbl_qty"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/txt_default"
                        app:fontFamily="@font/opensans_regular" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_outline_round_capsule">

                        <ImageView
                            android:id="@+id/ivMinus"
                            android:layout_width="@dimen/icon_large"
                            android:layout_height="@dimen/icon_large"
                            android:layout_gravity="center"
                            android:foreground="?selectableItemBackground"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:padding="@dimen/margin_extra_small"
                            android:src="@drawable/ic_min_en" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etQty"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/form_min_height"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/stroke_divider"
                            android:layout_marginTop="@dimen/stroke_divider"
                            android:minWidth="60dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:fontFamily="@font/opensans_regular"
                            android:text="3"
                            android:inputType="number"
                            android:maxLength="2"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/txt_default" />

                        <ImageView
                            android:id="@+id/ivPlus"
                            android:layout_width="@dimen/icon_large"
                            android:layout_height="@dimen/icon_large"
                            android:padding="@dimen/margin_extra_small"
                            android:layout_gravity="center"
                            android:foreground="?selectableItemBackground"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:src="@drawable/ic_plus_en" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>