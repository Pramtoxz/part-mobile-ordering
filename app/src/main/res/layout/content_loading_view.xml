<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <FrameLayout
        android:id="@+id/flContentLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black50"
        android:visibility="gone">


        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/margin_big"
            android:layout_height="@dimen/margin_big"
            android:layout_gravity="center"
            android:visibility="gone"
            />

    </FrameLayout>


    <ImageView
        android:id="@+id/ivNotFound"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal|top" />


    <TextView
        android:id="@+id/tvReload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivNotFound"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_big"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center"
        android:textColor="@color/txt_black"
        android:textSize="@dimen/txt_large" />

    <TextView
        android:id="@+id/tvSubReload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvReload"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_big"
        android:textColor="@color/txt_hint_login"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:textSize="@dimen/txt_medium"

        />

    <Button
        android:id="@+id/buttonRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSubReload"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:paddingStart="@dimen/margin_big"
        android:paddingTop="@dimen/margin_small"
        android:paddingEnd="@dimen/margin_big"
        android:paddingBottom="@dimen/margin_small"
        android:visibility="gone" />

</RelativeLayout>
