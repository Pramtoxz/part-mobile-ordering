<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.loopeer.shadow.ShadowView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_marginBottom="@dimen/margin_4"
        app:cornerRadius="@dimen/margin_20"
        app:shadowMargin="@dimen/margin_4"
        app:shadowRadius="@dimen/margin_20">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginBottom="@dimen/margin_12"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="@dimen/margin_20"
                    android:src="@drawable/ic_elearning_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvNameCatalogue"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_semibold"
                        android:textColor="@color/txt_black_category"
                        android:text="Plastic Part Supra GTR.pdf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvSizeFile"
                        android:textSize="@dimen/font_12"
                        android:layout_marginTop="@dimen/margin_4"
                        app:fontFamily="@font/opensans_regular"
                        android:textColor="@color/txt_gray_category"
                        android:text="7 MB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivDownload"
                    android:padding="@dimen/margin_6"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_marginRight="@dimen/margin_20"
                    android:src="@drawable/ic_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </com.loopeer.shadow.ShadowView>

