<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="@dimen/margin_22"
        android:layout_marginBottom="@dimen/margin_22"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvSorting"
            app:fontFamily="@font/opensans_semibold"
            android:text="Part Number A-Z"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_width="0dp"
            android:textSize="@dimen/font_15"
            android:layout_weight="1"
            android:textColor="@color/txt_black_category"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivSorting"
            android:src="@drawable/bg_fill_sorting_grey"
            android:layout_width="@dimen/margin_22"
            android:layout_height="@dimen/margin_22"/>

    </LinearLayout>

    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:background="@color/divider"
        android:layout_height="@dimen/divider_1"/>

</LinearLayout>