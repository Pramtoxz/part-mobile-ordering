<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:background="@color/red_search"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_12"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lSearch"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginRight="@dimen/margin_14"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_search_kelompok_barang"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/margin_9"
                android:layout_marginBottom="@dimen/margin_9"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etSearch"
                    android:enabled="false"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:hint="@string/lbl_hint_type_part_number_desc_or_type"
                    android:layout_marginRight="@dimen/margin_15"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_hint_search"
                    android:textSize="@dimen/font_14"
                    app:fontFamily="@font/opensans_semibold"
                    android:background="@color/transparent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/ivSorting"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_sort_by"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_above="@+id/lBottom"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/srRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:overScrollMode="never"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/rootParent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@color/colorPrimary"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:id="@+id/rHeader"
                                android:layout_width="match_parent"
                                android:layout_height="90dp">

                            </RelativeLayout>

                            <LinearLayout
                                android:background="@drawable/bg_fill_bottom_fragment"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="30dp"/>

                        </LinearLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvHistoryOrder"
                            android:paddingTop="@dimen/margin_3"
                            android:paddingBottom="@dimen/margin_15"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:overScrollMode="never" />


                    </RelativeLayout>


                </androidx.core.widget.NestedScrollView>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        </LinearLayout>
        <include layout="@layout/content_view_state" />


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btnChart"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:foreground="?selectableItemBackground"
                android:layout_height="@dimen/margin_50"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_15"
                android:background="@drawable/bg_btn_green_search_parts" >

                <TextView
                    android:layout_marginBottom="@dimen/margin_2"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:id="@+id/tvItemChart"
                    android:text="2 items"
                    android:textSize="@dimen/font_15"
                    android:textColor="@color/white"
                    app:fontFamily="@font/opensans_semibold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:src="@drawable/ic_earning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginRight="@dimen/margin_20"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>