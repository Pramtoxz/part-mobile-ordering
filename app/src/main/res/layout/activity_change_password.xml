<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.login.LoginActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_honda" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_marginStart="@dimen/margin_10"
        android:padding="@dimen/margin_8"
        android:src="@drawable/ic_arrow_back"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toTopOf="@+id/viewLoginForm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_ganti_password"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/txt_huge"
            app:fontFamily="@font/opensans_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/changepasword_lbl_masukkan_kata_sandi_saat_ini_dan_kata_sandi_baru_untuk_mengganti_kata_sandi"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/txt_default" />

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewLoginForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fill_round_top_white"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/viewPasswordCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/lbl_password_saat_ini"
                android:textColor="@color/txt_hint_login"
                android:textSize="@dimen/txt_small" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/etPasswordCurrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_selector_form_login"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_type_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:minWidth="320dp"
                    android:minHeight="48dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="22dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/txt_black"
                    android:textColorHint="@color/txt_hint_login"
                    android:textSize="@dimen/txt_default" />

                <ImageView
                    android:src="@drawable/ic_visible"
                    android:id="@+id/btnShowPasswordCurrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:text="View"
                    android:textColor="@color/txt_hint_login"
                    android:textSize="@dimen/txt_small" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewPasswordNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewPasswordCurrent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/lbl_password_baru"
                android:textColor="@color/txt_hint_login"
                android:textSize="@dimen/txt_small" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/etPasswordNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_selector_form_login"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_type_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:minWidth="320dp"
                    android:minHeight="48dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="22dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/txt_black"
                    android:textColorHint="@color/txt_hint_login"
                    android:textSize="@dimen/txt_default" />

                <ImageView
                    android:src="@drawable/ic_visible"
                    android:id="@+id/btnShowPasswordNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:text="View"
                    android:textColor="@color/txt_hint_login"
                    android:textSize="@dimen/txt_small" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewPasswordRetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewPasswordNew">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/lbl_ulangi_password_baru"
                android:textColor="@color/txt_hint_login"
                android:textSize="@dimen/txt_small" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/etPasswordRetype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_selector_form_login"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_type_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:minWidth="320dp"
                    android:minHeight="48dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="22dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/txt_black"
                    android:textColorHint="@color/txt_hint_login"
                    android:textSize="@dimen/txt_default" />

                <ImageView
                    android:src="@drawable/ic_visible"
                    android:id="@+id/btnShowPasswordRetype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:text="View"
                    android:textColor="@color/txt_hint_login"
                    android:textSize="@dimen/txt_small" />

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:visibility="invisible"
            android:id="@+id/btnForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:padding="@dimen/margin_4"
            android:text="@string/lbl_forgot_password"
            android:layout_marginBottom="96dp"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/txt_default"
            app:fontFamily="@font/opensans_semibold"
            app:layout_constraintBottom_toTopOf="@id/btnChangePassword"
            app:layout_constraintEnd_toEndOf="@id/viewPasswordNew"
            app:layout_constraintTop_toBottomOf="@id/viewPasswordNew" />

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_50"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_fill_round_btn_red"
            android:gravity="center"
            android:textAllCaps="false"
            android:minWidth="320dp"
            android:minHeight="48dp"
            android:padding="8dp"
            android:textSize="@dimen/font_16"
            android:text="@string/btn_ganti_kata_sandi"
            android:textColor="@color/txt_white"
            app:fontFamily="@font/opensans_semibold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>