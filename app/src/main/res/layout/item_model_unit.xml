<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_small"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CX3 - NC11D3C2 A/T"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/txt_small"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            app:fontFamily="@font/opensans_regular" />

        <TextView
            android:id="@+id/tvCodeModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CX3 - NC11D3C2 A/T"
            android:textColor="@color/txt_gray"
            android:layout_marginTop="@dimen/margin_small"
            android:textSize="@dimen/txt_smallest"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            app:fontFamily="@font/opensans_regular" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="2dp"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:background="@drawable/bg_fill_round_gray_available">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/produk_lbl_prospek_amp_spk"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/txt_smallest"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            app:fontFamily="@font/opensans_regular" />

        <TextView
            android:id="@+id/tvSumProspect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginEnd="@dimen/margin_small"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/txt_small"
            app:fontFamily="@font/opensans_semibold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="2dp"
        android:gravity="center_horizontal"
        android:layout_marginEnd="@dimen/margin_medium"
        android:background="@drawable/bg_fill_round_gray_available">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unit_lbl_available"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/txt_smallest"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            app:fontFamily="@font/opensans_regular" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginEnd="@dimen/margin_small"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/txt_small"
            app:fontFamily="@font/opensans_semibold" />

    </LinearLayout>


</LinearLayout>