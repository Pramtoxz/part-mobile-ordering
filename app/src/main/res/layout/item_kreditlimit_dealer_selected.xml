<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_small"
    android:paddingBottom="@dimen/margin_small"
    android:paddingEnd="@dimen/margin_small"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Space
        android:id="@+id/spView"
        android:layout_width="@dimen/margin_extra_small"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="@drawable/bg_fill_kreditlimit_kodedealer_selected"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNameDealer"
            android:textSize="@dimen/font_14"
            android:textColor="@color/txt_black"
            android:paddingStart="10dp"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_extra_small"
            android:layout_weight="1"
            app:fontFamily="@font/opensans_regular"
            android:text="Brahmana Dealer"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivClose"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingEnd="@dimen/margin_extra_small"
            android:paddingStart="@dimen/margin_extra_small"
            android:layout_marginEnd="@dimen/margin_extra_small"
            android:src="@drawable/ic_close_rounded"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

    </LinearLayout>

</LinearLayout>