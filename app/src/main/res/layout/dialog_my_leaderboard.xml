<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_fill_bottom_dialog"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_small">

        <TextView
            android:id="@+id/tvRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/opensans_semibold"
            android:text="10"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/txt_medium" />

        <ImageView
            android:id="@+id/ivStatus"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_extra_small"
            android:src="@drawable/ic_peringkat_up_other" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:src="@drawable/ic_contact_phone" />

            <ImageView
                android:id="@+id/ivBadge"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="end|bottom"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:src="@drawable/bg_fill_round_btn_green"
                android:visibility="gone" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensans_semibold"
                android:text="Prisia Jodi"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/txt_small" />

            <TextView
                android:id="@+id/tvInfoPeringkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensans_semibold"
                android:text="Naik 2 peringkat"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/txt_smallest" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:orientation="vertical"
            android:paddingEnd="@dimen/margin_small">

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/margin_extra_small"
                android:fontFamily="@font/opensans_bold"
                android:text="200"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/txt_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/margin_extra_small"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/leaderboard_lbl_point"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/txt_smallest" />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin_small"
        android:drawableLeft="@drawable/ic_info_b"
        android:drawablePadding="@dimen/margin_small"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center_vertical"
        android:text="Lakukan Prospek dan penjualan untuk menambah poin"
        android:textColor="@color/txt_info"
        android:textSize="@dimen/txt_smallest" />

    <LinearLayout
        android:id="@+id/llElearning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@drawable/bg_fill_round_btn_green"
        android:orientation="horizontal"
        android:padding="@dimen/margin_mid">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_mid"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center_vertical"
            android:text="@string/profile_lbl_elearning"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/txt_small" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_small"
            android:src="@drawable/ic_p_elearning" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSalesActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_medium"
        android:background="@drawable/bg_fill_round_btn_green"
        android:foreground="?selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/margin_mid">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_mid"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center_vertical"
            android:text="@string/profile_lbl_elearning"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/txt_small" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_small"
            android:src="@drawable/ic_p_sales_activiry" />


    </LinearLayout>

</LinearLayout>