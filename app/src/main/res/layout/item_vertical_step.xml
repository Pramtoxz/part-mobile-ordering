<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_medium"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/step_circle_indicator_yellow"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/bg_fill_circle_indicator_yellow" />

        <View
            android:id="@+id/lineStep"
            android:layout_width="1.2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCurrentFunnelDetailProspect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_default"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/txt_white"
            android:textAllCaps="true"
            android:layout_marginBottom="@dimen/margin_medium"
            android:textStyle="bold"
            android:text="SPK"/>

        <TextView
            android:id="@+id/tvToFunnelDetailProspect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_smallest"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/txt_black"
            android:background="@drawable/bg_white_round_detail_prospect"
            android:paddingLeft="@dimen/margin_20"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_20"
            android:text="Pelanggan Belum melakukan tandatangan MOU"
            android:visibility="gone"/>

    </LinearLayout>


</LinearLayout>