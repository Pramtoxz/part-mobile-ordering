<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fill_round_top_white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <View
            android:id="@+id/iv_state"
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_centerHorizontal="true"
            android:background="@color/gray_alto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:orientation="horizontal"
                android:padding="@dimen/margin_mid"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <ImageView
                    android:id="@+id/ivUnitThumbnail"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@drawable/es_no_data" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_mid"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUnitName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:text="Beat ESP"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/txt_default"
                        app:fontFamily="@font/opensans_semibold" />

                    <TextView
                        android:id="@+id/tvUnitCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:text="CX3 - NC11D3C2 A/T"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/txt_small"
                        app:fontFamily="@font/opensans_regular" />


                    <TextView
                        android:id="@+id/tvUnitPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:text="Rp 25.000.000"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_small"
                        app:fontFamily="@font/opensans_semibold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:background="@drawable/bg_fill_round_gray_available"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_marginEnd="@dimen/margin_small"
                                android:text="@string/produk_lbl_prospek_amp_spk"
                                android:textColor="@color/txt_black"
                                android:textSize="@dimen/txt_smallest"
                                app:fontFamily="@font/opensans_regular" />

                            <TextView
                                android:id="@+id/tvProspectSPK"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/margin_small"
                                android:text="2"
                                android:textColor="@color/txt_black"
                                android:textSize="@dimen/txt_small"
                                app:fontFamily="@font/opensans_semibold" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llAvailableStock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:background="@drawable/bg_fill_round_gray_available"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="2dp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_marginEnd="@dimen/margin_small"
                                android:text="@string/stock_lbl_aksesoris"
                                android:textColor="@color/txt_black"
                                android:textSize="@dimen/txt_smallest"
                                app:fontFamily="@font/opensans_regular" />

                            <TextView
                                android:id="@+id/tvStock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/margin_small"
                                android:text="2"
                                android:textColor="@color/txt_black"
                                android:textSize="@dimen/txt_small"
                                app:fontFamily="@font/opensans_semibold" />


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/stock_apparel_lbl_warna"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/txt_default"
                app:fontFamily="@font/opensans_semibold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/gray_alto" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvModelUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                tools:itemCount="3"
                tools:listitem="@layout/item_model_unit" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_positive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:background="@drawable/bg_fill_round_btn_green"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:minWidth="112dp"
                android:padding="@dimen/margin_medium"
                android:text="@string/action_update_cart"
                android:textAllCaps="true"
                android:textColor="@color/txt_white"
                android:textSize="@dimen/txt_default" />


        </LinearLayout>

    </RelativeLayout>