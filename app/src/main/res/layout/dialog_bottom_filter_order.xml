<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/rootView"
    android:background="@drawable/bg_fill_bottom_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/vBottom">


        <View
            android:layout_marginTop="@dimen/margin_15"
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/bg_fill_round_gray" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:animateLayoutChanges="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_3"
                    android:layout_marginRight="@dimen/margin_15"
                    android:gravity="center"
                    android:text="@string/lbl_urutkan_berdasarkan"
                    android:textColor="@color/txt_black"
                    android:padding="@dimen/margin_medium"
                    android:textSize="@dimen/txt_medium"
                    app:fontFamily="@font/opensans_semibold" />

                    <TextView
                        android:foreground="?selectableItemBackground"
                        android:id="@+id/tvReset"
                        android:padding="@dimen/margin_medium"
                        android:layout_gravity="right"
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginRight="@dimen/margin_15"
                        android:gravity="center"
                        android:text="Reset"
                        android:textColor="@color/red_crimson"
                        android:textSize="@dimen/txt_default"
                        app:fontFamily="@font/opensans_semibold" />

                </FrameLayout>

<!--
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_20" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSortingPart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        tools:itemCount="1"
                        tools:listitem="@layout/item_sorting_part" />

                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/vBottom"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">


    <Button
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_marginLeft="@dimen/margin_22"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_22"
        android:layout_marginBottom="@dimen/margin_15"
        android:background="@drawable/bg_btn_green_search_parts"
        app:fontFamily="@font/opensans_semibold"
        android:text="@string/btn_apply_filter"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/font_15" />


    </LinearLayout>


</RelativeLayout>