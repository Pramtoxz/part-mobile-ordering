<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/vChart">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:overScrollMode="never"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rootParent"
                        android:layout_width="match_parent"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/rHeader"
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                    </RelativeLayout>

                        <LinearLayout
                            android:background="@drawable/bg_fill_bottom_fragment"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="30dp"/>

                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFavorit"
                        android:paddingBottom="@dimen/margin_15"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:listitem="@layout/item_favorite_part_number"
                        tools:itemCount="1"
                        android:overScrollMode="never" />


                </RelativeLayout>


            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <include layout="@layout/content_view_state" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/vChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btnChart"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:foreground="?selectableItemBackgroundBorderless"
                android:layout_height="@dimen/margin_50"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_15"
                android:background="@drawable/bg_btn_green_search_parts" >

                <TextView
                    android:layout_marginBottom="@dimen/margin_2"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:id="@+id/tvItemChart"
                    android:text="2 items"
                    android:textSize="@dimen/font_15"
                    android:textColor="@color/white"
                    app:fontFamily="@font/opensans_semibold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:src="@drawable/ic_shopping_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginStart="@dimen/margin_mid"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:src="@drawable/ic_arrow_chevron_right"
                    app:tint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>