<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_cart_number">

                <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_13"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14"
                    app:fontFamily="@font/opensans_semibold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_20"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPartNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="06381KW6P01"
                            android:textColor="@color/txt_black_category"
                            android:textSize="@dimen/font_14"
                            app:fontFamily="@font/opensans_semibold" />

                        <TextView
                            android:id="@+id/tvPartDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_1"
                            android:text="CON ROD â€¢ KIT"
                            android:textColor="@color/txt_gray_category"
                            android:textSize="@dimen/font_12"
                            app:fontFamily="@font/opensans" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvItemGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_20"
                        android:background="@drawable/bg_favorite_type"
                        android:paddingLeft="@dimen/margin_9"
                        android:paddingTop="@dimen/margin_1"
                        android:paddingRight="@dimen/margin_9"
                        android:paddingBottom="@dimen/margin_3"
                        android:text="TIRE"
                        android:textColor="@color/txt_gray_category"
                        android:textSize="@dimen/font_10"
                        app:fontFamily="@font/opensans_regular" />

                    <TextView
                        android:id="@+id/tvAvailabePcs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="386pcs"
                        android:textColor="@color/txt_black_category"
                        android:textSize="@dimen/font_12"
                        app:fontFamily="@font/opensans_semibold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_7"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSubPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_20"
                        android:layout_weight="1"
                        android:text="Rp. 55.000"
                        android:textColor="@color/red_nominal"
                        android:textSize="@dimen/font_12"
                        app:fontFamily="@font/opensans_bold" />

                    <TextView
                        android:id="@+id/tvTotalSubPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Rp. 21.230.000"
                        android:textColor="@color/red_nominal"
                        android:textSize="@dimen/font_12"
                        app:fontFamily="@font/opensans_bold" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:layout_marginTop="@dimen/margin_17"
            android:background="@color/grey_divider_1" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>