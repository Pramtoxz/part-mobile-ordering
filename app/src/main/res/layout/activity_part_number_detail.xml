<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rHeader"
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_fill_bottom_fragment"
                        android:orientation="vertical" />

                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_6"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_6"
                    app:cardCornerRadius="@dimen/margin_20"
                    app:cardElevation="@dimen/margin_3">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_20"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvPartNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="06381KW6P01"
                                    android:textColor="@color/txt_black_category"
                                    android:textSize="@dimen/font_14"
                                    app:fontFamily="@font/opensans_semibold" />

                                <TextView
                                    android:id="@+id/tvPartDescription"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_1"
                                    android:text="CON ROD â€¢ KIT"
                                    android:textColor="@color/txt_gray_category"
                                    android:textSize="@dimen/font_12"
                                    app:fontFamily="@font/opensans" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ivDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_20"
                                android:src="@drawable/ic_discrount_badge" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvItemGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_4"
                            android:layout_marginRight="@dimen/margin_20"
                            android:background="@drawable/bg_favorite_type"
                            android:paddingLeft="@dimen/margin_9"
                            android:paddingTop="@dimen/margin_1"
                            android:paddingRight="@dimen/margin_9"
                            android:paddingBottom="@dimen/margin_3"
                            android:text="TIRE"
                            android:textColor="@color/txt_gray_category"
                            android:textSize="@dimen/font_10"
                            app:fontFamily="@font/opensans_regular" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_20"
                            android:gravity="bottom"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvHet"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_7"
                                    android:layout_marginRight="@dimen/margin_20"
                                    android:text="Rp. 55.000"
                                    android:textColor="@color/red_nominal"
                                    android:textSize="@dimen/font_12"
                                    app:fontFamily="@font/opensans_bold" />

                                <TextView
                                    android:id="@+id/tvAvailabePcs"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_4"
                                    android:layout_marginRight="@dimen/margin_20"
                                    android:textColor="@color/txt_gray"
                                    android:textSize="@dimen/font_10"
                                    app:fontFamily="@font/opensans_semibold" />


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_more_information"
                    android:textColor="@color/txt_black_category"
                    android:textSize="@dimen/font_14"
                    app:fontFamily="@font/opensans_semibold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_21"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_type_motor"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_regular" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTypeMotor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_22"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_weight="1"
                        android:text="@string/lbl_hotline_flag"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_regular" />

                    <TextView
                        android:id="@+id/tvHotlineFlag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/lbl_hotline_flag"
                        android:textColor="@color/txt_black_category"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_semibold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_22"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_hotline_max_qty"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_regular" />

                    <TextView
                        android:id="@+id/tvHotlineMaxQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/lbl_hotline_flag"
                        android:textColor="@color/txt_black_category"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_semibold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_22"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_flag_numbering"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_regular" />

                    <TextView
                        android:id="@+id/tvFlagNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/lbl_hotline_flag"
                        android:textColor="@color/txt_black_category"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_semibold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_22"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_kit_flag"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_regular" />

                    <TextView
                        android:id="@+id/tvKitFlag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/lbl_hotline_flag"
                        android:textColor="@color/txt_black_category"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_semibold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_22"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_kit_hgp_acc_tl"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_regular" />

                    <TextView
                        android:id="@+id/tvHgpTl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/lbl_hotline_flag"
                        android:textColor="@color/txt_black_category"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_semibold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="@dimen/margin_22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_22"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lbl_kelipatan_dus"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_regular" />

                    <TextView
                        android:id="@+id/tvDus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/lbl_hotline_flag"
                        android:textColor="@color/txt_black_category"
                        android:textSize="@dimen/font_14"
                        app:fontFamily="@font/opensans_semibold" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>