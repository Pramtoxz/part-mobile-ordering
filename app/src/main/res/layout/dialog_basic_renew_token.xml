<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_fill_round_container_white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingTop="16dp"
    android:paddingRight="24dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_state"
        android:layout_marginTop="@dimen/margin_medium"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:text="@string/dialog_lbl_title"
        android:textColor="#45554A"
        android:textSize="@dimen/txt_large"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:textColor="#364E56"
        android:textSize="@dimen/txt_default"
        tools:text="Description" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassword"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_capsule_gray"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:minWidth="112dp"
            android:text="@string/btn_cancel"
            android:textAllCaps="true"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/txt_default" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="@dimen/margin_small"
            android:background="@drawable/bg_fill_round_btn_green"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:minWidth="112dp"
            android:text="@string/dialog_lbl_ok"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_default" />



    </LinearLayout>

</RelativeLayout>