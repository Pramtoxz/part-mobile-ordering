<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.loopeer.shadow.ShadowView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_4"
        app:cornerRadius="@dimen/margin_20"
        app:shadowMargin="@dimen/margin_4"
        app:shadowRadius="@dimen/margin_20">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPositionLeaderboard"
                android:text="10"
                android:textSize="@dimen/font_16"
                android:layout_marginLeft="18dp"
                app:fontFamily="@font/opensans_semibold"
                android:textColor="@color/txt_black_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ivArrowLeaderboard"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_double_arrow_up_green"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_marginLeft="@dimen/margin_18"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/placeholder_image_circle"
                android:transitionName="imagePreview"/>

            <LinearLayout
                android:layout_marginRight="@dimen/margin_18"
                android:layout_marginLeft="13dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvNameDashboard"
                    app:fontFamily="@font/opensans_semibold"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/txt_black_category"
                    android:text="Putra Arin Wiratama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/tvRank"
                    app:fontFamily="@font/opensans"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/txt_gray_category"
                    android:text="Naik 1 peringkat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </com.loopeer.shadow.ShadowView>

