<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.widget.activity.SalesActivityFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_honda" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/ivUser"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="24dp"
                android:src="@drawable/placeholder_image_circle" />

            <LinearLayout
                android:id="@+id/viewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llLeaderboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btnLeaderboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?selectableItemBackgroundBorderless"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:src="@drawable/ic_leaderboard" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_fill_round_yellow_leaderboard"
                        android:paddingStart="@dimen/margin_small"
                        android:paddingEnd="@dimen/margin_small"
                        android:text="1 st"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/txt_small"
                        app:fontFamily="@font/opensans_semibold">

                    </TextView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/btnMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="16dp"
                    android:src="@drawable/ic_inbox_2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/viewButton"
                android:layout_toRightOf="@id/ivUser"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salam SATU HATI,"
                    android:textColor="@color/txt_white"
                    android:textSize="@dimen/txt_default"
                    app:fontFamily="@font/opensans_bold" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/txt_white"
                    android:textSize="@dimen/txt_default"
                    app:fontFamily="@font/opensans_bold" />

            </LinearLayout>

        </RelativeLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:elevation="0dp">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsingToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    app:contentScrim="@android:color/transparent"
                    app:layout_scrollFlags="exitUntilCollapsed|scroll|snap">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_collapseMode="parallax">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp">

                            <FrameLayout
                                android:id="@+id/flProspek"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/bg_fill_round_top_white"
                                        android:orientation="vertical"
                                        android:padding="12dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="12dp"
                                            android:text="Actual/Target"
                                            android:textColor="#838383"
                                            android:textSize="@dimen/txt_smallest" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="50/90"
                                            android:textColor="@color/txt_black"
                                            android:textSize="@dimen/txt_medium"
                                            app:fontFamily="@font/opensans_semibold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/bg_fill_round_bottom_gray"
                                        android:orientation="vertical"
                                        android:padding="12dp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="40"
                                                android:textColor="@color/txt_black"
                                                android:textSize="@dimen/txt_default"
                                                app:fontFamily="@font/opensans_semibold" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="6dp"
                                                android:text="Prospek"
                                                android:textColor="#838383"
                                                android:textSize="@dimen/txt_smallest" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="10"
                                                android:textColor="@color/txt_black"
                                                android:textSize="@dimen/txt_default"
                                                app:fontFamily="@font/opensans_semibold" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="6dp"
                                                android:text="Belum FU"
                                                android:textColor="#838383"
                                                android:textSize="@dimen/txt_smallest" />


                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/bg_fill_round_yellow"
                                    android:gravity="center"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="5dp"
                                    android:text="Prospek"
                                    android:textColor="@color/txt_black"
                                    android:textSize="@dimen/txt_small"
                                    app:fontFamily="@font/opensans_semibold" />

                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/flSPK"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/bg_fill_round_top_white"
                                        android:orientation="vertical"
                                        android:padding="12dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="12dp"
                                            android:text="SPK Pending"
                                            android:textColor="#838383"
                                            android:textSize="@dimen/txt_smallest" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="20"
                                            android:textColor="@color/txt_black"
                                            android:textSize="@dimen/txt_medium"
                                            app:fontFamily="@font/opensans_semibold" />

                                    </LinearLayout>

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/bg_fill_round_bottom_gray"
                                        android:padding="12dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:visibility="invisible">

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="3"
                                                    android:textColor="@color/txt_black"
                                                    android:textSize="@dimen/txt_default"
                                                    app:fontFamily="@font/opensans_semibold" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="6dp"
                                                    android:text="Program"
                                                    android:textColor="#838383"
                                                    android:textSize="@dimen/txt_smallest" />


                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="10"
                                                    android:textColor="@color/txt_black"
                                                    android:textSize="@dimen/txt_default"
                                                    app:fontFamily="@font/opensans_semibold" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="6dp"
                                                    android:text="Belum FU"
                                                    android:textColor="#838383"
                                                    android:textSize="@dimen/txt_smallest" />


                                            </LinearLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="3"
                                                android:textColor="@color/txt_black"
                                                android:textSize="@dimen/txt_default"
                                                app:fontFamily="@font/opensans_semibold" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="6dp"
                                                android:text="Program"
                                                android:textColor="#838383"
                                                android:textSize="@dimen/txt_smallest" />


                                        </LinearLayout>

                                    </FrameLayout>


                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/bg_fill_round_yellow"
                                    android:gravity="center"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="5dp"
                                    android:text="SPK"
                                    android:textColor="@color/txt_black"
                                    android:textSize="@dimen/txt_small"
                                    app:fontFamily="@font/opensans_semibold" />

                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/flSales"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="24dp"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/bg_fill_round_top_white"
                                        android:orientation="vertical"
                                        android:padding="12dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="12dp"
                                            android:text="Actual/Target"
                                            android:textColor="#838383"
                                            android:textSize="@dimen/txt_smallest" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="10/9"
                                            android:textColor="@color/txt_black"
                                            android:textSize="@dimen/txt_medium"
                                            app:fontFamily="@font/opensans_semibold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/bg_fill_round_bottom_gray"
                                        android:orientation="vertical"
                                        android:padding="12dp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="40"
                                                android:textColor="@color/txt_black"
                                                android:textSize="@dimen/txt_default"
                                                app:fontFamily="@font/opensans_semibold" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="6dp"
                                                android:text="Tunai"
                                                android:textColor="#838383"
                                                android:textSize="@dimen/txt_smallest" />


                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="10"
                                                android:textColor="@color/txt_black"
                                                android:textSize="@dimen/txt_default"
                                                app:fontFamily="@font/opensans_semibold" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="6dp"
                                                android:text="Kredit"
                                                android:textColor="#838383"
                                                android:textSize="@dimen/txt_smallest" />


                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/bg_fill_round_yellow"
                                    android:gravity="center"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="5dp"
                                    android:text="Sales"
                                    android:textColor="@color/txt_black"
                                    android:textSize="@dimen/txt_small"
                                    app:fontFamily="@font/opensans_semibold" />

                            </FrameLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_fill_bottom_fragment"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:padding="@dimen/margin_mid"
                            android:text="Success Rate"
                            android:textAllCaps="true"
                            android:textColor="@color/txt_hint_login"
                            android:textSize="@dimen/txt_small"
                            app:fontFamily="@font/opensans_bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_small"
                            android:background="@drawable/bg_fill_round_container_white"
                            android:orientation="vertical">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvSuccessRate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:itemCount="4"
                                tools:listitem="@layout/item_wallboard_activity" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_small"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/margin_mid">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:padding="@dimen/margin_mid"
                                android:text="Aktivitas Overdue"
                                android:textAllCaps="true"
                                android:textColor="@color/txt_hint_login"
                                android:textSize="@dimen/txt_small"
                                app:fontFamily="@font/opensans_bold" />

                            <TextView
                                android:id="@+id/tvSeeOverdue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|end"
                                android:clickable="true"
                                android:fontFamily="@font/opensans_regular"
                                android:padding="2dp"
                                android:text="Lihat Semua"
                                android:textColor="@color/red_crimson"
                                android:textSize="@dimen/txt_small" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_small"
                            android:background="@drawable/bg_fill_round_container_white"
                            android:orientation="vertical">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvOverdue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:paddingBottom="@dimen/margin_mid"
                                tools:itemCount="4"
                                tools:listitem="@layout/item_wallboard_activity" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_small"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/margin_mid">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:padding="@dimen/margin_mid"
                                android:text="Aktivitas Baru"
                                android:textAllCaps="true"
                                android:textColor="@color/txt_hint_login"
                                android:textSize="@dimen/txt_small"
                                app:fontFamily="@font/opensans_bold" />

                            <TextView
                                android:id="@+id/tvSeeNew"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|end"
                                android:clickable="true"
                                android:fontFamily="@font/opensans_regular"
                                android:padding="2dp"
                                android:text="Lihat Semua"
                                android:textColor="@color/red_crimson"
                                android:textSize="@dimen/txt_small" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_small"
                            android:background="@drawable/bg_fill_round_container_white"
                            android:orientation="vertical">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvNewAktivitas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:paddingBottom="@dimen/margin_mid"
                                tools:itemCount="4"
                                tools:listitem="@layout/item_wallboard_activity" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSalesActivity_new"
        android:layout_margin="@dimen/margin_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/black_mirage" />

</FrameLayout>