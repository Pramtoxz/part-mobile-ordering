<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:Skeleton="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_7"
        app:cardCornerRadius="@dimen/margin_20"
        app:cardElevation="@dimen/margin_3"
        android:foreground="?selectableItemBackground"
        android:layout_marginBottom="@dimen/margin_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/margin_5"
                    app:cardCornerRadius="@dimen/margin_15"
                    android:layout_width="@dimen/margin_90"
                    android:layout_height="@dimen/margin_90">


                          <LinearLayout
                                  android:layout_width="match_parent"
                              android:orientation="vertical"
                                  android:layout_height="match_parent">

                              <io.rmiri.skeleton.SkeletonGroup
                                      android:id="@+id/skGroup"
                                      android:layout_width="match_parent"
                                      android:layout_height="match_parent"
                                      Skeleton:SK_BackgroundViewsColor="@color/grey_sk_bg"
                                      Skeleton:SK_animationAutoStart="true"
                                      Skeleton:SK_animationDirection="LTR"
                                      Skeleton:SK_animationDuration="1000"
                                      Skeleton:SK_animationFinishType="gradient"
                                      Skeleton:SK_animationNormalType="gradient"
                                      Skeleton:SK_backgroundMainColor="@android:color/transparent"
                                      Skeleton:SK_highLightColor="@color/grey_sk_hightlight">

                                  <io.rmiri.skeleton.SkeletonView
                                          android:layout_width="match_parent"
                                          android:layout_height="match_parent"
                                          Skeleton:SK_padding="0dp"
                                          Skeleton:SK_shapeType="rect">

                                      <ImageView
                                              android:id="@+id/ivCompetitor"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                          android:scaleType="centerCrop"/>


                                  </io.rmiri.skeleton.SkeletonView>


                              </io.rmiri.skeleton.SkeletonGroup>


                          </LinearLayout>


                      </androidx.cardview.widget.CardView>




                <LinearLayout
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCodeDealer"
                        android:textSize="@dimen/font_14"
                        android:text="12345 â€¢ Kingland"
                        android:textColor="@color/txt_black_category"
                        app:fontFamily="@font/opensans_semibold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="@dimen/font_12"
                        android:id="@+id/tvNameCompetitor"
                        android:text="Kingland Ban Promo"
                        android:layout_marginTop="@dimen/margin_4"
                        android:textColor="@color/txt_gray_category"
                        app:fontFamily="@font/opensans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvItemGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_6"
                        android:layout_marginRight="@dimen/margin_20"
                        android:background="@drawable/bg_favorite_type"
                        android:paddingTop="@dimen/margin_1"
                        android:paddingLeft="@dimen/margin_18"
                        android:paddingRight="@dimen/margin_18"
                        android:paddingBottom="@dimen/margin_3"
                        android:text="TIRE"
                        android:textColor="@color/txt_gray_category"
                        android:textSize="@dimen/font_10"
                        app:fontFamily="@font/opensans_regular" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_marginTop="@dimen/margin_4"
                        android:textSize="@dimen/font_12"
                        android:text="Juni 30, 2019 - Juli 31, 2019"
                        android:textColor="@color/txt_gray_category"
                        app:fontFamily="@font/opensans_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/tvNote"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_15"
                android:textSize="@dimen/font_12"
                android:text="Hanya untuk ukuran ban 90/90 - 14"
                android:textColor="@color/txt_gray_category"
                app:fontFamily="@font/opensans_italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>