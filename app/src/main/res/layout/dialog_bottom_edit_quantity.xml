<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_fill_bottom_fragment_white">

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/txt_gray"
        android:text="@string/lbl_add_quantity_bold"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:textSize="@dimen/font_12"
        app:fontFamily="@font/opensans_bold"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/bg_fill_edit_qty"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etQty"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_13"
            android:layout_marginBottom="@dimen/margin_14"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:background="@color/transparent"
            android:textSize="@dimen/font_14"
            android:text="240"
            android:inputType="number"
            android:textColor="@color/txt_black_category"
            app:fontFamily="@font/opensans_semibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSubmitQty"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_marginBottom="@dimen/margin_30"
        android:layout_width="match_parent"
        android:text="@string/btn_submit_quantity"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/font_15"
        app:fontFamily="@font/opensans_semibold"
        android:background="@drawable/bg_btn_green_search_parts"
        android:layout_height="@dimen/margin_50"/>

</LinearLayout>