<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_follow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow Up 3 . Bertemu"
        android:fontFamily="@font/opensans_regular"
        android:textColor="@color/txt_black"
        android:textSize="@dimen/txt_default"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_5">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_followup_target"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tvDateCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:text="29 Apr 2019"
            android:fontFamily="@font/opensans"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/txt_small"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_followup_done"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_medium"/>

        <TextView
            android:id="@+id/tvDateDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:text="31 Apr 2019"
            android:fontFamily="@font/opensans"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/txt_small"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pak Anang meminta bertemu di hari senin tanggal 29 April 2019 di Kantor"
        android:layout_marginTop="@dimen/margin_20"
        android:textSize="@dimen/txt_small"
        android:textColor="@color/txt_black"
        android:fontFamily="@font/opensans_regular"
        android:letterSpacing="0"
        android:lineSpacingExtra="20px"/>
</LinearLayout>