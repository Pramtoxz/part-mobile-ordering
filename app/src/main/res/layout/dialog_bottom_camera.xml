<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg_fill_bottom_fragment_white"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_25"
        android:layout_marginRight="@dimen/margin_20"
        android:gravity="center"
        android:text="Select Photo using option"
        android:textColor="@color/txt_black_category"
        android:textSize="@dimen/font_17"
        app:fontFamily="@font/opensans_regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCamera"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@drawable/bg_fill_camera"
            android:text="@string/lbl_camera"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_14"
            app:fontFamily="@font/opensans_semibold" />

        <Button
            android:id="@+id/btnGallery"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_25"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@drawable/bg_fill_gallery"
            android:text="@string/lbl_gallery"
            android:textAllCaps="false"
            app:fontFamily="@font/opensans_semibold"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14" />


    </LinearLayout>

    <Button
        android:id="@+id/btnPreview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_50"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_20"
        android:background="@drawable/bg_fill_gallery"
        android:paddingLeft="@dimen/_50sdp"
        android:paddingRight="@dimen/_50sdp"
        android:text="@string/lbl_preview"
        android:textAllCaps="false"
        app:fontFamily="@font/opensans_semibold"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14"
        android:visibility="gone" />

</LinearLayout>