<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:background="@color/red_search"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginRight="@dimen/margin_14"
            android:layout_marginBottom="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_search_kelompok_barang"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/margin_9"
                android:layout_marginBottom="@dimen/margin_9"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_search"
                    android:layout_width="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:hint="@string/hint_cari_tipe_motor"
                    android:layout_marginRight="@dimen/margin_15"
                    android:textColor="@color/white"
                    android:textColorHint="#BCFFFFFF"
                    android:textSize="@dimen/font_14"
                    android:inputType="textCapSentences"
                    app:fontFamily="@font/opensans_semibold"
                    android:background="@color/transparent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tvBatalkan"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_marginRight="@dimen/margin_20"
            app:fontFamily="@font/opensans_semibold"
            android:textSize="@dimen/font_14"
            android:text="@string/lbl_batalkan"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/rootContent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFavorit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

<!--                    <androidx.recyclerview.widget.RecyclerView-->
<!--                        android:id="@+id/rvAll"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"/>-->

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <include layout="@layout/content_view_state"/>

    </RelativeLayout>


</LinearLayout>