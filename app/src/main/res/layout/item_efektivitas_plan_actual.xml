<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.loopeer.shadow.ShadowView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_6"
        app:cornerRadius="@dimen/margin_20"
        app:shadowMargin="@dimen/margin_4"
        app:shadowRadius="@dimen/margin_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSalesName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empty"
                android:layout_marginBottom="@dimen/margin_4"
                android:textColor="@color/txt_black_category"
                android:textSize="@dimen/font_14"
                app:fontFamily="@font/opensans_bold" />

            <TextView
                android:id="@+id/tvSalesKode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empty"
                android:textColor="@color/txt_black_category"
                android:textSize="@dimen/font_14"
                app:fontFamily="@font/opensans_semibold" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_height="wrap_content"
                android:text="Empty"
                android:textColor="@color/txt_gray_ongoing"
                android:textSize="@dimen/font_12"
                app:fontFamily="@font/opensans_regular" />

            <TextView
                android:id="@+id/tvReport"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_6"
                android:layout_height="wrap_content"
                android:text="Empty"
                android:textColor="@color/txt_black_category"
                android:textSize="@dimen/font_14"
                app:fontFamily="@font/opensans_semibold" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tvAmountTotal"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_6"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textColor="@color/txt_black_category"
                android:textSize="@dimen/font_14"
                app:fontFamily="@font/opensans_semibold" />

        </LinearLayout>

    </com.loopeer.shadow.ShadowView>

</LinearLayout>